<script src="~/Scripts/script.js"></script>
@model ProdavnicaObuceM.Models.mainModel
@{
    ViewBag.Title = "NarudzbaZ";
}
<div class="body-narudzbaZ">
    <h1>Naručite ovde:</h1>
    <br />
    <div>
        @using (Html.BeginForm("NarudzbaZ", "Pages", FormMethod.Post, new { @class = "forma" }))
        {
            <fieldset>
                <legend>Narudžbenica</legend>
                <p>Naziv proizvoda: @Html.TextBoxFor(x => x.ZenskaObuca.Naziv, new { @readonly = "readonly" }) </p>
                <p>Brend: @Html.TextBoxFor(x => x.ZenskaObuca.Brend, new { @readonly = "readonly" })</p>
                <p>Cena: @Html.TextBoxFor(x => x.ZenskaObuca.Cena, new { @readonly = "readonly" })</p>
                <p>
                    Tip obuce: @Html.DropDownListFor(x => x.ZenskaObuca.Tip, new[] {
                new SelectListItem(){Text="Muška obuća", Value="Muška obuća"},
                new SelectListItem(){Text="Ženska obuća", Value="Ženska obuća"},
                new SelectListItem(){Text="Dečija obuća", Value="Dečija obuća"}}, " ")
                </p>
                <p>Ženski broj (36-40): @Html.TextBoxFor(x => x.ZenskaObuca.ZenskiBroj)</p>
                <p>Ime i prezime: @Html.TextBoxFor(x => x.ZenskaObuca.ImePrezime)</p>
                <p>Email: @Html.TextBoxFor(x => x.ZenskaObuca.Email)</p>
                <p>Mobilni: @Html.TextBoxFor(x => x.ZenskaObuca.Mobilni)</p>
                <p>Adresa: @Html.TextBoxFor(x => x.ZenskaObuca.Adresa)</p>
                <p>Grad: @Html.TextBoxFor(x => x.ZenskaObuca.Grad)</p>
                <p>@Html.CheckBoxFor(x => x.ZenskaObuca.Pravilnik) Saglasan/na sam sa uslovima i pravilima korišćenja.</p>
                <br />
                <input type="submit" value="Naruči" id="s-naruci" />
            </fieldset>
        }
    </div>
</div>

