<script src="~/Scripts/script.js"></script>
@model ProdavnicaObuceM.Models.mainModel
@{
    ViewBag.Title = "NarudzbaD";
}
<div class="body-narudzbaD">
    <h1>Naručite ovde:</h1>
    <br />
    <div>
        @using (Html.BeginForm("NarudzbaD", "Pages", FormMethod.Post, new { @class = "forma" }))
        {
            <fieldset>
                <legend>Narudžbenica</legend>
                <p>Naziv proizvoda: @Html.TextBoxFor(x => x.DecijaObuca.Naziv, new { @readonly = "readonly" }) </p>
                <p>Brend: @Html.TextBoxFor(x => x.DecijaObuca.Brend, new { @readonly = "readonly" })</p>
                <p>Cena: @Html.TextBoxFor(x => x.DecijaObuca.Cena, new { @readonly = "readonly" })</p>
                <p>
                    Tip obuce: @Html.DropDownListFor(x => x.DecijaObuca.Tip, new[] {
     new SelectListItem(){Text="Muška obuća", Value="Muška obuća"},
     new SelectListItem(){Text="Ženska obuća", Value="Ženska obuća"},
     new SelectListItem(){Text="Dečija obuća", Value="Dečija obuća"}}, " ")
                </p>
                <p>
                    Uzrast: <br />
                    @Html.RadioButtonFor(x => x.DecijaObuca.Uzrast, "0-2") 0-2 godine
                    @Html.RadioButtonFor(x => x.DecijaObuca.Uzrast, "3-5") 3-5 godina
                    @Html.RadioButtonFor(x => x.DecijaObuca.Uzrast, "6-10")  6-10 godina
                    @Html.RadioButtonFor(x => x.DecijaObuca.Uzrast, "11-14") 11-14 godina
                </p>
                <p>Dečiji broj (16-35): @Html.TextBoxFor(x => x.DecijaObuca.DecijiBroj)</p>
                <p>Ime i prezime: @Html.TextBoxFor(x => x.DecijaObuca.ImePrezime)</p>
                <p>Email: @Html.TextBoxFor(x => x.DecijaObuca.Email)</p>
                <p>Mobilni: @Html.TextBoxFor(x => x.DecijaObuca.Mobilni)</p>
                <p>Adresa: @Html.TextBoxFor(x => x.DecijaObuca.Adresa)</p>
                <p>Grad: @Html.TextBoxFor(x => x.DecijaObuca.Grad)</p>
                <p>@Html.CheckBoxFor(x => x.DecijaObuca.Pravilnik) Saglasan/na sam sa uslovima i pravilima korišćenja.</p>
                <br />
                <input type="submit" value="Naruči" id="s-naruci" />
            </fieldset>
        }
    </div>
</div>



